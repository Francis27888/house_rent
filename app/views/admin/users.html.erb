<h3 style="text-align:center"> List of Users</h3>

<!--<p><%= notice %></p>-->
<div class="myTable">
<table class="table table-bordered table-hover table-sm">
    <thead class="bg-light">
          <tr>
            <th>ID</th>
            <th>Names</th>
            <th>Email</th>
            <th>Category</th>
            <th>Phone number</th>
            <th>Number of house(s)</th>
            <th colspan="3" style="text-align:center">Details</th>
          </tr>
    </thead>
    <tbody>
<%@users.each do |user|%>
    <tr>
        <td><%= user.id%></td>
        <td><%= user.names%></td>
        <td><%= user.email%></td>
        <td><%= user.user_category%></td>
        <td><%= user.phone_number %></td>
        <% @house_number=user.houses%>
        <% if @house_number.present?%>
          <td><%=@house_number.count%></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td style="text-align:center">
            <%= link_to houses_path, class:'btn btn-info btn-sm' do %>
              <i class="glyphicon glyphicon-list"></i> Houses
            <% end %>
        </td>
        <!--<td style="text-align:center">-->
        <!--    <%= link_to  edit_user_registration_path ,class:'btn btn-info btn-sm' do%>-->
        <!--      <i class="glyphicon glyphicon-pencil"></i>-->
        <!--    <% end %>-->
        <!--</td>-->
        <td style="text-align:center">
          <%= link_to  delete_user_path(user.id),method: :delete,data:{confirm:'are you sure you want to delete?'},class:'btn btn-danger btn-sm' do%>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
    </tr>
    
   
<% end %>
</tbody>
</table>
<div class="container pagination justify-content-center">
              <%= paginate @users , theme: 'twitter-bootstrap-4'%>
            </div>
</div>
